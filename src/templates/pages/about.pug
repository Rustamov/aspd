extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = 'About'
	- const bodyClass = 'about-page'

block content
	main.main
		+b.SECTION.s-about-banner.desktop-nml(data-scroll-section)
			+e.inner
				.container-md
					+e.block.--recording-studio
						+e.block-inner
							+e.block-text.text(data-scroll data-scroll-call="revMask" data-scroll-offset="0%")
								+e.block-text-line-1.text.text-cover
									h1 О нас

								+e.block-text-line-2.text.text-cover
									p Каждый из нас понимает очевидную вещь: внедрение современных методик требует анализа своевременного выполнения сверхзадачи. Идейные соображения высшего порядка.
									p Следует отметить, что внедрение современных методик, а также свежий взгляд на привычные вещи - безусловно открывает новые горизонты для своевременного выполнения сверхзадачи.

							+e.A.block-more.js-scroll-fade-up(href='#' data-delay="1.3")
								+e.block-more-icon
									//- +icon('round-arrow-right')
									svg.svg-icon(viewBox='0 0 67 67' fill='none' xmlns='http://www.w3.org/2000/svg')
										circle(cx='33.5' cy='33.5' r='32' stroke-width='3')
										path(d='M31 28l5.743 5.743L31 39.485' stroke-width='1.5' stroke-linecap='round')

							
						
			+e.bg
				+e.IMG.bg-img.js-parallax-img(src="/img/about-banner-bg.jpg" alt="О нас" data-trigger=".s-about-banner")


		+b.SECTION.s-certificates.desktop-nml(data-scroll-section)
			.container-md
				+e.top 
					+e.H2.title Благодарственные письма

				+e.list
					+e.col
						+b.A.certificate-item(href="/img/temp/certificate-1-big.jpg" data-fancyox)
							+e.inner
								+e.SPAN.picture
									+e.IMG.picture-img(src="/img/temp/certificate-1.jpg" width="430" height="690" alt="Письмо от 2006г.")
								
								+e.SPAN.inf
									+e.SPAN.inf-label Письмо от
									+e.SPAN.inf-year 2016 г.
					


		+b.SECTION.s-feedback.--about.desktop-nml#feedback(data-scroll-section)
			.container-md
				+e.form
					+feedback



		