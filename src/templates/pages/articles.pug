extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = 'Статьи'
	- const bodyClass = 'articles-page'

block content
	main.main
		+b.SECTION.s-articles-banner.desktop-nml(data-scroll-section)
			+e.inner
				.container
					+e.block
						+e.block-inner
							+e.block-text.text(data-scroll data-scroll-call="revMask" data-scroll-offset="0%")
								+e.block-text-line-1.text.text-cover
									h1 Раздел статей

							+e.A.block-more.js-scroll-fade-up(href='#' data-delay="1.3")
