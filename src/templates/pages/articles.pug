										circle(cx='33.5' cy='33.5' r='32' stroke-width='3')
										path(d='M31 28l5.743 5.743L31 39.485' stroke-width='1.5' stroke-linecap='round')
						
			+e.bg
				+e.IMG.bg-img.js-parallax-img(src="/img/articles-banner-bg.jpg" alt="Раздел статей" data-trigger=".s-articles-banner")


